{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure rustdesk",
    "$id": "http://nethserver.org/json-schema/task/input/rustdesk/configure-module",
    "description": "Configure rustdesk",
    "examples": [
        {
            "host": "rustdesk.domain.org"
        }
    ],
    "type": "object",
    "required": [
        "host"
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'rustdesk.domain.org'",
            "format": "hostname",
            "pattern": "\\."
        }
    }
}